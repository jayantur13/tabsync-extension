{
    "manifest_version": 3,
    "name": "TabSync - Local Browser Sync",
    "version": "1.0.1",
    "description": "Sync browser tabs locally using tabsync cli or electron-app",
    "host_permissions": ["http://localhost/*", "ws://localhost/*"],
    "permissions": [
        "tabs",
        "storage",
        "scripting"
    ],
    "icons": {
        "16": "src/icons/icon16.png",
        "32": "src/icons/icon32.png",
        "48": "src/icons/icon48.png",
        "128": "src/icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup/options.html",
        "default_title": "TabSync - Local Browser Sync"
    }
}